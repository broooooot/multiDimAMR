FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      balanceParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// note: balanceParDict is now expected in constant folder 
// (but can be modified during runtime)
// one symlink is needed inside each processor*/constant folder
// for multi-region cases constant/regionName and processor*/constant/regionName

numberOfSubdomains 4;

method          ptscotch; //clustered //scotch

constraints
{
    refinementHistoryMultiDim
    {
        //- Decompose cells such that all cell originating from single cell
        //  end up on same processor
        type    refinementHistoryMultiDim;
    }
}
